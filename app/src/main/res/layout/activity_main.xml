                    android:layout_marginTop="@dimen/offset_6"
                    android:text="Logout" />

                <Button
                    android:id="@+id/activity_main_test_btn"
                    style="@style/ButtonNormal"
                    android:layout_marginTop="@dimen/offset_6"
                    android:text="Token" />-->

        <!--        <Button-->
        <!--            android:id="@+id/activity_main_login_btn"-->
        <!--            style="@style/ButtonNormal"-->
        <!--            android:layout_marginTop="@dimen/offset_6"-->
        <!--            android:text="Login" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_grey_600"/>

        <Button
            android:id="@+id/activity_main_walk_btn"
            style="@style/ButtonNormal"
            android:layout_marginTop="@dimen/offset_6"
            android:textColor="@color/white"
            android:text="Onboard Intro" />


        <Button
            android:id="@+id/activity_main_know_btn"
            style="@style/ButtonNormal"
            android:layout_marginTop="@dimen/offset_6"
            android:textColor="@color/white"
            android:text="Know More" />

        <Button
            android:id="@+id/activity_main_phone_verify_btn"
            style="@style/ButtonNormal"
            android:layout_marginTop="@dimen/offset_6"
            android:textColor="@color/white"
            android:text="Phone Verify" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_grey_600"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="other Parts"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/offset_8"/>

