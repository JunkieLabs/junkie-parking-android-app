<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_shop_detail_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="@dimen/offset_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/transparent"
            app:layout_collapseMode="pin"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/Tb.TextAppearance.h3"
            app:titleTextColor="@color/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:layout_margin="@dimen/offset_32"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:scaleType="fitEnd"
            app:tint="@color/md_white_1000_25"
            android:layout_height="@dimen/length_96"
            app:srcCompat="@drawable/ic_balloons"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/offset_32"
                android:paddingTop="@dimen/offset_20"
                android:paddingEnd="@dimen/offset_24"
                android:paddingBottom="@dimen/offset_20">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Tb.TextAppearance.h3"
                    android:textColor="@color/white"
                    android:text="Thanks " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Tb.TextAppearance.h3"
                    android:textColor="@color/white"
                    android:text="for " />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Tb.TextAppearance.h3"
                    android:textColor="@color/white"
                    android:text="Installing !" />

                <LinearLayout
                    android:id="@+id/activity_onboard_details_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/length_8"
                        android:id="@+id/activity_onboard_detail_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We loved that you tried Junkie Parking Dummy App."
                        android:textAppearance="@style/Tb.TextAppearance.h5"
                        android:textColor="@color/md_white_1000_50" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_36" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:paddingStart="@dimen/offset_32"
                android:paddingTop="@dimen/offset_20"
                android:paddingEnd="@dimen/offset_24"
                android:paddingBottom="@dimen/offset_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/length_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_6"
                    android:text="Give us star on Github, if you Liked this app. Please visit.."
                    android:textAppearance="@style/Tb.TextAppearance.h5"
                    android:textColor="@color/md_white_1000_50" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    app:strokeColor="@color/md_white_1000_25"

                    android:id="@+id/activity_thanks_btn_github"
                    android:layout_gravity="center_vertical"
                    android:text="JunkieLabs Github"
                    android:gravity="center_vertical"
                    app:cornerRadius="@dimen/offset_16"
                    android:layout_height="@dimen/length_64"

                    android:textAppearance="@style/Tb.TextAppearance.Button.Text"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_github"
                    app:iconPadding="@dimen/offset_32"


                    app:iconGravity="start"
                    app:iconSize="@dimen/length_20"
                    app:iconTint="@color/white" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_16"/>




        </LinearLayout>
    </FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>