<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="@dimen/offset_8"
    android:layout_centerInParent="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:focusable="true"
    android:background="@color/md_black_1000_50"
    android:visibility="gone">

    <androidx.cardview.widget.CardView
        android:id="@+id/tb_progress_card"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_8"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="@dimen/offset_12"
        app:cardElevation="@dimen/offset_0">

        <FrameLayout
            android:layout_width="@dimen/length_48"
            android:layout_height="@dimen/length_48">
            <ProgressBar
                android:id="@+id/progress_view"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="@dimen/length_32"
                android:layout_height="@dimen/length_32"
                android:layout_gravity="center"
                android:layout_margin="@dimen/offset_8"
                android:theme="@style/Tb.Progress.Primary" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>